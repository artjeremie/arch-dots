#!/bin/bash
blue=$(xgetres color4)
bg=$(xgetres background)
fg=$(xgetres foreground)
mf=$(xgetres font)

if pidof unclutter >/dev/null ;
then
  [ "$(printf "No\\nYes" | dmenu -i -fn $mf -nb $bg -sb $blue -nf $fg -p "Disable unclutter?")" = "Yes" ] && killall unclutter && notify-send "Unclutter disabled."
else
  ifinstalled unclutter || exit
  [ "$(printf "No\\nYes" | dmenu -i -fn $mf -nb $bg -sb $blue -nf $fg -p "Enable unclutter?")" = "Yes" ] && unclutter --timeout 3 -jitter 50 --ignore-scrolling && notify-send "Unclutter enabled."
fi
