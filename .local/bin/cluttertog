#!/bin/bash
if pidof unclutter >/dev/null ;
then
  [ "$(printf "No\\nYes" | dmenu -i -fn Monospace-12 -nb "#22262e" -sb "#bf616a" -nf "#d8dee9" -p "Disable unclutter?")" = "Yes" ] && killall unclutter && notify-send "Unclutter disabled."
else
  ifinstalled unclutter || exit
  [ "$(printf "No\\nYes" | dmenu -i -fn Monospace-12 -nb "#22262e" -sb "#bf616a" -nf "#d8dee9" -p "Enable unclutter?")" = "Yes" ] && unclutter --timeout 3 -jitter 50 --ignore-scrolling && notify-send "Unclutter enabled."
fi
