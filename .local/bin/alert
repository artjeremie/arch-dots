#!/bin/bash
# audio alert for dunst, uncomment which for which audio you use

# alsa
#aplay ~/.local/share/audio/beep.wav

# pulseaudio
# Skip alert for mpdnotify
if [[ "$1" == "mpdnotify" ]]
then
  exit 0
fi

if [[ "$1" == "pulselevel" ]]
then
  exit 0
fi

if [[ "$1" == "volume" ]]
then
  exit 0
fi

paplay ~/.local/share/audio/beep.wav
